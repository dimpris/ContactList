@model ContactList.Models.Request.ConfirmResetPasswordRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}
<h1>Reset Password</h1>
<div class="row">
    <div class="col-md-4">
            <form asp-action="ConfirmResetPassword">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordRepeat" class="control-label"></label>
                    <input type="password" asp-for="PasswordRepeat" class="form-control" />
                    <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                </div>
                <div class="form-group">
                <input type="hidden" asp-for="Code" value="@ViewBag.ResetCode" />
                    <input type="submit" value="Reset" class="btn btn-primary btn-lg" />
                </div>
            </form>
    </div>
</div>