@model ContactList.Models.Request.ResetPasswordCodeRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}
<h1>Reset Password</h1>
<div class="row">
    <div class="col-md-4">

        @if (string.IsNullOrEmpty(ViewBag.ResetCode))
        {
            <form asp-action="ResetPassword">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Reset" class="btn btn-primary btn-lg" />
                </div>
            </form>
        }
        else
        {
            <h4>Check your inbox</h4>
            <p>
                As SMTP is not configured, I put reset password link
                <a href="/Auth/ConfirmResetPassword?code=@ViewBag.ResetCode">here...</a>
            </p>
        }
    </div>
</div>